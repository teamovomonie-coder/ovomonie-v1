
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to create a new user document (registration)
    match /users/{userId} {
      allow create: if request.data.email != null && request.data.phone != null;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to create and read documents in collections
    match /financialTransactions/{docId} {
      allow create, read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /notifications/{docId} {
      allow read, create: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /invoices/{docId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /loans/{docId} {
      allow read, create: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /investments/{docId} {
      allow read, create: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Default rule: authenticated users can read most collections
    match /{collection}/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
    }
  }
}

