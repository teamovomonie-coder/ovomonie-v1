rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership based on a userId field in a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can read and update their own user document.
    // New users can create their own document.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isOwner(userId);
    }
    
    // Allow users to read their own financial transactions, but not create/update/delete them directly.
    // Transactions should only be created by trusted server-side code (like our API routes).
    match /financialTransactions/{transactionId} {
      allow read: if isOwner(resource.data.userId);
      // Deny client-side writes for security.
      allow write: if false; 
    }
    
    // Users can read their own loans. Updates/Creations are handled by the server.
    match /loans/{loanId} {
      allow read: if isOwner(resource.data.userId);
       // Deny client-side writes for security.
      allow write: if false;
    }
    
    // Users can read their own investments. Updates/Creations are handled by the server.
    match /investments/{investmentId} {
      allow read: if isOwner(resource.data.userId);
       // Deny client-side writes for security.
      allow write: if false;
    }

    // Notifications: users can read/write their own docs only.
    match /notifications/{notificationId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
    }

    // Payroll batches scoped to userId.
    match /payrollBatches/{batchId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
    }

    // Inventory collections are server-managed; block client writes.
    match /products/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /categories/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /suppliers/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /locations/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /inventoryTransactions/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Default deny for anything not explicitly matched above.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
