# Local environment variables for development
# Copy this file to `.env.local` and fill in your real values. Do NOT commit secrets.

AUTH_SECRET=your-strong-random-secret-here

# Supabase (required for database operations)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# VFD API Configuration (required for card payments and banking)
VFD_API_BASE=https://api-devapps.vfdbank.systems/vtech-cards/api/v2/baas-cards
VFD_CONSUMER_KEY=your-vfd-consumer-key
VFD_CONSUMER_SECRET=your-vfd-consumer-secret
VFD_TOKEN_URL=https://api-devapps.vfdbank.systems/vfd-tech/baas-portal/v1/baasauth/token
# Optional: If you have a pre-generated access token
VFD_ACCESS_TOKEN=your-vfd-access-token

# Google Gemini AI (required for AI assistant)
GEMINI_API_KEY=your-gemini-api-key-here

# Google Cloud Text-to-Speech (optional - for authentic Nigerian language voices)
# Get from: https://console.cloud.google.com/apis/credentials
# If not set, will use browser TTS with Nigerian English accent
GOOGLE_CLOUD_TTS_API_KEY=your-google-cloud-tts-api-key-here

# Sentry Error Monitoring (optional but recommended for production)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
