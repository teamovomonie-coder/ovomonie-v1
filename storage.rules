
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Restrict access: only authenticated users can read/write,
    // and enforce a basic size limit to reduce abuse.
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 10 * 1024 * 1024; // 10MB cap
    }
  }
}
